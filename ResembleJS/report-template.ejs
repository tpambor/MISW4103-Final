<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>VRT </title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
      crossorigin="anonymous"
    ></script>
    <style>
      pre {
        background: #f4f4f4;
        border: 1px solid #ddd;
        border-left: 3px solid #f36d33;
        color: #666;
        page-break-inside: avoid;
        font-family: monospace;
        font-size: 15px;
        line-height: 1.6;
        margin-bottom: 1.6em;
        max-width: 100%;
        overflow: auto;
        padding: 1em 1.5em;
        display: block;
        word-wrap: break-word;
      }
      img {
        width: 100%;
        border: 1px solid #ccc;
      }
      h3.title {
        background: #ddd;
        position: sticky;
        top: 0;
      }
      h4 {
        position: sticky;
        top: 0;
        text-align: right;
      }
      hr {
        margin: 1rem 0;
      }
      div.row.fail {
        border: 2px solid red;
      }
    </style>
  </head>
  <body>
    <div class="container">

      <h1>Resultados</h1>
      <div class="accordion" id="comparer-results">
        <% for (const scenario of reportData.scenarios) { %>
            <div class="accordion-item">
                  <h2 class="accordion-header">
                    <button
                      class="accordion-button collapsed"
                      type="button"
                      data-bs-toggle="collapse"
                      data-bs-target="#<%= scenario.group %>"
                      aria-expanded="true"
                      aria-controls="<%= scenario.group %>"
                    >
                    <%= scenario.group %>
                    </button>
                  </h2>
                  <div class="accordion-collapse collapse show">
                    <div class="accordion-body">
                  
                      <div class="accordion" id="acc-<%= scenario.name+scenario.group %>">
                        <div class="accordion-item">
                        <h2 class="accordion-header">
                          <button
                            class="accordion-button collapsed"
                            type="button"
                            data-bs-toggle="collapse"
                            data-bs-target="#<%= scenario.name+scenario.group %>"
                            aria-expanded="true"
                            aria-controls="<%= scenario.name+scenario.group %>"
                          >
                            <%=  scenario.name %>
                          </button>
                        </h2>
                          <div  class="accordion-collapse collapse show">
                            <div class="accordion-body">
                              <% let i = 1 %>
                              <% for (const step of scenario.steps) { %>
                                <div  class="accordion-item">
                                  <h2 class="accordion-header">
                                    <button
                                      class="accordion-button collapsed"
                                      type="button"
                                      data-bs-toggle="collapse"
                                      data-bs-target="#<%= step.name+scenario.name %>"
                                      aria-expanded="true"
                                      aria-controls="<%= step.name+scenario.name %>"
                                    >
                                  <%=  step.name %>
                                    </button>
                                  </h2>
                                  <div id="<%= step.name+scenario.name %>" class="accordion-collapse collapse">
                                    <div class="accordion-body">
                                      <div class="row <%= step.rawMisMatchPercentage > 15 ? 'fail': '' %>" >
                                        <h4 class="col-12 text-right">Paso <%= i++ %></h4>
                                        <div class="col-3">
                                          <h5>Before</h5>
                                          <a href="../<%= step.before %>" target="_blank">
                                            <img src="../<%= step.before %>" alt="" />
                                          </a>
                                        </div>
                                        <div class="col-3">
                                          <h5>After</h5>
                                          <a href="../<%= step.after %>" target="_blank">
                                            <img src="../<%= step.after %>" alt="" />
                                          </a>
                                        </div>
                                        <div class="col-6">
                                          <h5>Comparation</h5>
                                          <a href="../<%= step.resultPath %>" target="_blank">
                                            <img src="../<%= step.resultPath %>" alt="" />
                                          </a>
                                        </div>
                                        <div class="col-12">
                                          <h5>Result</h5>
                                          <pre><%= step.data %></pre>
                                        </div>
                                      </div>
                                      <hr />
                                  </div>
                                    
                                  </div>
                                    
                              </div>
                              <% } %>
                          </div>
                           
                          </di>
                        </div>
                      </div>

                    </div>
                  </div>
               
                </div>

               
            </div>
      <% } %>
    </div>
     
    </div>
  </body>
</html>